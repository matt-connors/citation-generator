---
import Layout from "../layouts/page.astro";
import CitationSearch from "../components/react/CitationSearch";

const site = Astro.site;
const title = "MLA Generator | Reliable Citations in MLA, APA, & Chicago";
const description =
    "Effortlessly format & generate accurate citations in APA, MLA, Chicago & Harvard styles. MLA Generator: Trusted by students and researchers worldwide.";
---

<Layout title={title} description={description}>
    <section id="tool">
        <div id="text-container">
            <h1 class="heading-1">MLA Format <br />Citation Generator</h1>
            <p class="subtitle">
                <!-- <a href={site}>MLA Generator</a>:  -->
                Easy and Reliable APA, MLA, Chicago and Harvard citations,
                trused by students worldwide.
            </p>
        </div>
        <CitationSearch client:load />
    </section>
</Layout>

<style>
    #tool {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    #text-container {
        text-align: center;
        margin: 4rem 0;
    }
    #text-container .heading-1 {
        margin-bottom: 1rem;
    }
    #text-container .subtitle {
        max-width: 44ch;
        color: var(--color-text-light);
    }
</style>
